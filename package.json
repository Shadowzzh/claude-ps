{
	"name": "claude-ps",
	"version": "0.2.6",
	"description": "TUI application for viewing and managing Claude Code processes",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"claude-ps": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsx src/index.tsx",
		"build": "tsup",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"all": "pnpm format && pnpm typecheck && pnpm lint"
	},
	"keywords": [
		"claude",
		"tui",
		"terminal",
		"process-manager"
	],
	"author": "ziheng",
	"license": "MIT",
	"dependencies": {
		"chalk": "^5.3.0",
		"chokidar": "^4.0.3",
		"fullscreen-ink": "^0.1.0",
		"ink": "^5.0.1",
		"meow": "^13.2.0",
		"p-limit": "^7.3.0",
		"react": "^18.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@types/react": "^18.3.0",
		"tsup": "^8.3.0",
		"tsx": "^4.19.0",
		"typescript": "^5.6.0"
	},
	"engines": {
		"node": ">=18"
	}
}
